---
import Seo from '../components/Seo.astro';
import data from '../data';

interface Props {
  title?: string;
}
const {title} = Astro.props;
const pageTitle = `MaJuriste.fr${title ? ` - ${title}` : ''}`;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link
      rel="icon"
      type="image/svg+xml"
      href={`${import.meta.env.BASE_URL ?? ''}/favicon.svg`
        // Remove extra slashes
        .replace(/(?<!:)\/+/gm, '/')}
    />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>

    <Seo />
  </head>
  <body>
    <header class="text-center py-10 flex flex-col gap-4">
      <h2 class="text-5xl font-bold">{data.name}</h2>
      <p class="text-2xl">Juriste en Droit de la Famille</p>
    </header>

    <main class="flex flex-col items-center">
      <slot />
    </main>

    <footer class="bg-neutral-900 py-10 text-sm flex flex-col items-center">
      <div>{data.name} • Juriste en droit des étrangers</div>
      <div
        class="grid lt-sm:grid-cols-1 grid-cols-[repeat(3,_auto)] justify-items-center"
      >
        <div class="px-2">Mentions légales</div>
        <div class="border-l-white sm:border-l-2 px-2 box-content">
          Politique de confidentialité
        </div>
        <!-- <div class="border-l-white sm:border-l-2 px-2 box-content">
          Site réalisé par Cody
        </div> -->
      </div>
    </footer>
  </body>
</html>

<style>
  html,
  body {
    --uno: 'm-0 w-full h-full bg-black text-white font-sans';
  }
</style>
