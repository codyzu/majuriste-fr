---
import Seo from '../components/Seo.astro';
import data from '../data';

interface Props {
  title?: string;
}
const {title} = Astro.props;
const pageTitle = `MaJuriste.fr${title ? ` - ${title}` : ''}`;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link
      rel="icon"
      type="image/svg+xml"
      href={`${import.meta.env.BASE_URL ?? ''}/favicon.svg`
        // Remove extra slashes
        .replace(/(?<!:)\/+/gm, '/')}
    />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>

    <Seo />
  </head>
  <body>
    <header class="text-center py-8 flex flex-col">
      <h2 class="text-3xl font-bold">{data.name}</h2>
      <p class="text-lg">Juriste en Droit des Étrangers</p>
    </header>

    <main class="flex flex-col items-center">
      <slot />
    </main>

    <footer class="bg-neutral-900 py-6 text-sm flex flex-col items-center">
      <div>{data.name} • Juriste en droit des étrangers</div>
      <div>
        Mentions légales | Politique de confidentialité | Site réalisé par Cody
      </div>
    </footer>
  </body>
</html>

<style>
  html,
  body {
    --uno: 'm-0 w-full h-full bg-black text-white font-sans';
  }
</style>
